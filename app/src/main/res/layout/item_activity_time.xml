<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center">

    <ImageView
        android:id="@+id/item_sale_ivIcon"
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:scaleType="fitCenter"
        android:src="@mipmap/qg5"/>
    <TextView
        android:id="@+id/item_sale_tvDesc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="商品的描述信息"
        android:textColor="@color/Black"
        android:textSize="16sp"
        android:layout_margin="4dp"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/item_time_tv_newPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="现价"
            android:textSize="16sp"
            android:textColor="@color/Red"
            android:layout_marginRight="10dp"/>
        <TextView
            android:id="@+id/item_time_tv_oldPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="原价"
            android:textColor="@color/Gray"/>
    </LinearLayout>
    <Button
        android:id="@+id/item_sale_btn"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:text="仅剩52件"
        android:textSize="12sp"
        android:textColor="@color/Black"
        android:gravity="left"
        android:paddingTop="5dp"
        android:paddingLeft="5dp"
        android:layout_gravity="center"
        android:background="@mipmap/btn_limitbuy"/>
</LinearLayout>